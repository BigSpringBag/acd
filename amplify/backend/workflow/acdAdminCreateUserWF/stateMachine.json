{
  "Comment": "Cognito Admin Create User",
  "StartAt": "Choice State",
  "States": {
    "Choice State": {
      "Type": "Choice",
      "Choices": [
        {
          "And": [
            {
              "Variable": "$.input.email",
              "IsPresent": true
            },
            {
              "Variable": "$.input.email",
              "IsNull": false
            },
            {
              "Variable": "$.input.email",
              "StringGreaterThan": ""
            }
          ],
          "Next": "Admin Create User"
        }
      ],
      "Default": "Pass State"
    },
    "Pass State": {
      "Type": "Pass",
      "End": true
    },
    "Admin Create User": {
      "Type": "Task",
      "Resource": "${lambdaArn}",
      "Parameters": {
        "email.$": "$.input.email",
        "input.$": "$.input"
      },
      "Retry": [
        {
          "ErrorEquals": ["CustomError"],
          "IntervalSeconds": 1,
          "MaxAttempts": 2,
          "BackoffRate": 2
        },
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 30,
          "MaxAttempts": 2,
          "BackoffRate": 2
        },
        {
          "ErrorEquals": ["States.ALL"],
          "IntervalSeconds": 5,
          "MaxAttempts": 5,
          "BackoffRate": 2
        }
      ],
      "End": true
    }
  }
}
