{
  "Comment": "Send email with delay",
  "StartAt": "Init",
  "States": {
    "Init": {
      "Comment": "Just to initialized the state machine",
      "Type": "Pass",
      "Next": "WaitUntil"
    },
    "WaitUntil": {
      "Type": "Wait",
      "TimestampPath": "$.dueDate",
      "Next": "SendEmail"
    },
    "SendEmail": {
      "Type": "Task",
      "Resource": "${lambdaArn}",
      "Catch": [
        {
          "ErrorEquals": [
            "Invoke Error"
          ],
          "Next": "InvokeError"
        }
      ],
      "End": true
    },
    "InvokeError": {
      "Type": "Pass",
      "Result": "Something went wrong when invoking sendEmail lambda",
      "End": true
    }
  }
}