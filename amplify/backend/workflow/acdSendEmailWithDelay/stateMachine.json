{
  "Comment": "Send email with delay",
  "StartAt": "Init",
  "States": {
    "Init": {
      "Comment": "Just to initialized the state machine",
      "Type": "Pass",
      "Next": "WaitUntil"
    },
    "WaitUntil": {
      "Type": "Wait",
      "TimestampPath": "$.dueDate",
      "Next": "SendEmail"
    },
    "SendEmail": {
      "Type": "Task",
      "Resource": "${lambdaArn}",
      "End": true
    }
  }
}